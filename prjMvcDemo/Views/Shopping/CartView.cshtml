@model IEnumerable<prjMvcDemo.Models.CShoppingCartItem>

@{
    ViewBag.Title = "CartView";
}

<h2>檢視購物車</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            序
        </th>
        <th>
            @Html.DisplayNameFor(model => model.productId)
        </th>
        <th>
            購買產品
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.小計)
        </th>
        <th></th>
    </tr>

@{ 
    int count = 0;
    decimal pay = 0;
    decimal tax = 0;
    foreach (var item in Model)
    {
        count++;
        pay += item.小計;
    <tr>
        <td>
            @count
        </td>
        <td>
            @item.product.fName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.小計)
        </td>
        <td>
            @Html.ActionLink("取消", "Edit", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
    }
    tax = pay * 0.05m;
    }
</table>
<li>交易金額：@pay.ToString("0")</li>
<li>稅　　額：@tax.ToString("0")</li>
<li>交易金額：@((pay+tax).ToString("0"))</li>
